{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "excludePackagePatterns": [
                "sigs.k8s.io/controller-runtime",
                "k8s.io/*",
                "go.etcd.io/*",
                "google.golang.org/grpc"
            ],
            "enabled": true
        }
    ]
}